{{outlet}}
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Streams</div>
  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>URL</th>
        <th>Live Video</th>
        <th>Private</th>
        <th>Cameras</th>
        <th>Status</th>
        <th>Start Date</th>
      </tr>
    </thead>
      <tbody>
        {{#each model.users as |user|}}
        <tr>
          <td>{{user.name}}</td>
          <td>{{user.url}}</td>
          <td>{{user.liveVideo}}</td>
          <td>{{user.private}}</td>
          <td>{{user.cameras}}</td>
          <td>{{user.status}}</td>
          <td>{{user.startDate}}</td>
        </tr>
        {{/each}}
      </tbody>
  </table>
</div>
{{#link-to "users.add" tagName="button" class="btn btn-primary"}}Add New User{{/link-to}}


<form {{action 'addUser' on='submit'}}>
  <div class="form-group">
    <label for="inputName">Name</label>
    {{input type="text" class="form-control" id="name" placeholder="Name" value=name}}
  </div>
  <div class="form-group">
    <label for="inputUrl">URL</label>
    {{input type="url" class="form-control" id="url" placeholder="URL" value=url}}
  </div>
  <div class="form-group">
    <label for="inputLiveVideo">Live Video</label>
    {{input type="checkbox" class="form-control" id="liveVideo" placeholder="Live Video" checked=liveVideo}}
  </div>
  <div class="form-group">
    <label for="inputCameras">Cameras</label>
    {{input type="text" class="form-control" id="cameras" placeholder="Cameras" value=cameras}}
  </div>
  <div class="form-group">
    <label for="inputStatus">Status</label>
    {{input type="text" class="form-control" id="status" placeholder="Status" value=status}}
  </div>
  <div class="form-group">
    <label for="inputStartDate">Start Date</label>
    {{input type="date" class="form-control" id="startDate" placeholder="Start Date" value=startDate}}
  </div>

  <button type="submit" name="button" class="btn btn-primary">Add User</button>
</form>

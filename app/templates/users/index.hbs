{{outlet}}

<section id="users" class="container">
  <div class="row">
    <h2>Users</h2>
    {{#link-to "users.add" class="btn btn-primary"}}Add New User{{/link-to}}
    <table class="table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
          <tr>
            <td>{{user.first}}</td>
            <td>{{user.last}}</td>
            <td>{{user.email}}</td>
            <td>{{user.role}}</td>
            <td>{{#link-to "users.user" user.id }}Edit{{/link-to}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</section>

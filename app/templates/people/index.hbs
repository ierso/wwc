{{outlet}}
<div class="container">
  <ul>
    {{#each model as |person|}}
    <li>{{person.name}}</li>
    <li>{{person.email}}</li>
    <li><button {{action 'removePerson' person}} class="btn">X</button></li>
    {{/each}}
  </ul>

  <form {{action 'addPerson' on='submit'}}>
    <div class="form-group">
      <label for="inputName">Name</label>
      {{input type="text" class="form-control" id="name" placeholder="Name" value=name}}
    </div>
    <div class="form-group">
      <label for="inputEmail">Email</label>
      {{input type="email" class="form-control" id="email" placeholder="Email" value=email}}
    </div>

    <button type="submit" name="button" class="btn btn-primary">Add Person</button>
  </form>
</div>
